version = "1.0";

agent: {
    common: {
        log_level = 1;
    };

    devices: {
        dht: {
            i2c: {
                path = "/dev/i2c-0";
                addr = 0x76;
            };
        };

        tvoc: {
            i2c: {
                path = "/dev/i2c-0";
                addr = 0x5a;
            };
            nwake_pin: {
                path = "/dev/gpiochip1";
                line = 230;
            };
        };

        lcd: {
            spi: {
                path = "/dev/spidev0.1";
                clock_speed = 24000000;
            };
            dc_pin: {
                path = "/dev/gpiochip1";
                line = 78;
            };
            reset_pin: {
                path = "/dev/gpiochip1";
                line = 77;
            };
            backlight_pin: {
                path = "/dev/gpiochip1";
                line = 68;
            };
        };

        stick: {
            up: {
                path = "/dev/gpiochip2";
                line = 1;
            };
            down: {
                path = "/dev/gpiochip2";
                line = 3;
            };
            left: {
                path = "/dev/gpiochip2";
                line = 2;
            };
            right: {
                path = "/dev/gpiochip2";
                line = 4;
            };
            push: {
                path = "/dev/gpiochip2";
                line = 0;
            };
        };
    };

    libraries: {
        lvgl: {
            fs_base = "lvgl_fs";
        };
    };

    theme: {
        background = "A:images/background.bin";
    };
};
