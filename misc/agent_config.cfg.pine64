version = "1.0";

agent: {
    common: {
        log_level = 1;
    };

    drivers: {
        i2c: {
            path = "/dev/i2c-1";
        };
    };

    devices: {
        lcd: {
            spi: {
                path = "/dev/spidev0.1";
                clock_speed = 24000000;
            };
            dc_pin: {
                path = "/dev/gpiochip1";
                line = 229;
            };
            reset_pin: {
                path = "/dev/gpiochip1";
                line = 230;
            };
            backlight_pin: {
                path = "/dev/gpiochip1";
                line = 231;
            };
        };
    };

    libraries: {
        lvgl: {
            fs_base = "lvgl_fs";
        };
    };

    theme: {
        background = "A:images/background.bin"
    };
};