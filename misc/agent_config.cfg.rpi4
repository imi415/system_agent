version = "1.0";

agent: {
    common: {
        log_level = 1;
    };

    drivers: {
        i2c: {
            path = "/dev/i2c-1";
        };
    };

    devices: {
        lcd: {
            spi: {
                path = "/dev/spidev0.1";
                clock_speed = 24000000;
            };
            dc_pin: {
                path = "/dev/gpiochip0";
                line = 24;
            };
            reset_pin: {
                path = "/dev/gpiochip0";
                line = 23;
            };
            backlight_pin: {
                path = "/dev/gpiochip0";
                line = 12;
            };
        };
        stick: {
            up: {
                path = "/dev/gpiochip2";
                line = 1;
            };
            down: {
                path = "/dev/gpiochip2";
                line = 3;
            };
            left: {
                path = "/dev/gpiochip2";
                line = 2;
            };
            right: {
                path = "/dev/gpiochip2";
                line = 4;
            };
            push: {
                path = "/dev/gpiochip2";
                line = 0;
            };
        };
    };

    libraries: {
        lvgl: {
            fs_base = "lvgl_fs";
        };
    };

    theme: {
        background = "A:images/background.bin"
    };
};
